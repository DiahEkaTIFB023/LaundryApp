<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ImageView
        android:id="@+id/register_img_1"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-47dp"
        android:src="@drawable/clothesline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_img_1"
        android:text="WELCOME IN LAUNDRY APP"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppinssemibold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/register_txt_1"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/register_txt_1"
        android:padding="30dp"
        android:id="@+id/linearLayout_1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Enter Your Full Name"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppinsregular"
            android:id="@+id/edt_fullname"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Enter Your Email"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_email"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Create Password"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Confirm Password"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_confirm_password"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_below="@id/linearLayout_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:width="300dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:id="@+id/btn_register_1"
        android:fontFamily="@font/poppinsbold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btn_register_1"
        android:gravity="center"
        android:layout_marginTop="20dp">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/poppinsbold"
            android:textSize="12sp"
            android:textColor="@color/secondColor"
            android:id="@+id/txt_login"/>

    </LinearLayout>


</RelativeLayout>